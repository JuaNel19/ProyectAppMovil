<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".TiempoActividad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/relojIcono"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Icono de reloj"
            android:src="@drawable/reloj"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tituloTiempoActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de Actividad"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/relojIcono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/descripcionTiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Define el tiempo que se le otorgará al hijo para que siga usando su teléfono móvil."
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/tituloTiempoActividad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de Inicio:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/descripcionTiempo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/valorHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textColor="#004D40"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/labelHoraInicio"
            app:layout_constraintBottom_toBottomOf="@id/labelHoraInicio"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/labelHoraFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de Finalización:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/labelHoraInicio"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/valorHoraFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textColor="#004D40"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/labelHoraFin"
            app:layout_constraintBottom_toBottomOf="@id/labelHoraFin"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/botonDefinirTiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Definir Tiempo de Actividad"
            android:backgroundTint="#00796B"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/labelHoraFin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textoAhoraNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahora no"
            android:textColor="#00796B"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/botonDefinirTiempo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
